<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qdat.secretslambook">

    <application
        android:allowBackup="true"
        android:icon="@drawable/appicondairy"
        android:label="@string/app_name"
        android:roundIcon="@drawable/appicondairy"
        android:supportsRtl="true"
        android:theme="@style/Theme.SecretSlambook">
        <activity android:name=".AddArticleActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AddDairyTheme"></activity>
        <activity
            android:name=".Auth_Activity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/MainActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".database.DairyDataProvider"
            android:authorities="com.qdat.secretslambook"
            android:exported="false" />
    </application>

</manifest>